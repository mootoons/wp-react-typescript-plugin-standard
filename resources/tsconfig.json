{
  "compilerOptions": {
    "outDir": "../dist/",
    "jsx": "react",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"],
      "@components/*": ["src/components/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@services/*": ["src/services/*"],
      "@pages/*": ["src/pages/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "exclude": ["node_modules"]
}
